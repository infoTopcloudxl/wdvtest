                    {{
                        widget('content', 'producten-lossprevention-text', {
                            content: '
                                <p>
                                    CEIA produceert al jaren toonaangevende
                                    walk-through en draagbare metaaldetectiesystemen 
                                    voor verlies- en diefstalpreventie.
                                </p>
                            '
                        })|raw
                    }}
                
                </div>
            
                <div class="row col-sm-12">
                
                    {{
                        widget('content', 'producten-lossprevention-button', {
                            content: '<a href="/producten/loss-prevention" class="button" role="button">Bekijk producten</a>'
                        })|raw
                    }}
                
                </div>
            
            </div>
        
        </div>
    
        <div class="row">
            
            <div class="col-sm-12 col-md-4">
            
                <div class="row col-sm-12">
                
                    {{
                        widget('content', 'producten-handscanners-titel', {
                            content: '<h3>HAND SCANNERS</h3>'
                        })|raw
                    }}
                
                </div>
            
                <div class="row col-sm-12">
                
                    {{
                        widget('content', 'producten-handscanners-text', {
                            content: '
                                <p>
                                    De PD140E is een handheld detector met 
                                    een zeer hoge betrouwbaarheid.
                                    De handscanner is uitgerust met geavanceerde technologie voor 
                                    detectie van alle soorten metalen.
                                    Er is speciale aandacht besteed aan het ontwerp zodat 
                                    de hand van de gebruiker niet stoort bij het detectiegebied.
                                </p>
                            '
                        })|raw
                    }}
                
                </div>
            
                <div class="row col-sm-12">
                
